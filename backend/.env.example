# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/whatsapp-clone

# Configurações JWT
JWT_SECRET=seu_jwt_secret_super_seguro
JWT_EXPIRE=7d

# Configurações do Servidor
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Configurações Twilio (SMS/Telefone)
TWILIO_ACCOUNT_SID=seu_twilio_account_sid
TWILIO_AUTH_TOKEN=seu_twilio_auth_token
TWILIO_PHONE_NUMBER=seu_numero_twilio

# Configurações Firebase (Push Notifications)
FIREBASE_PROJECT_ID=seu_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=seu_firebase_private_key_id
FIREBASE_PRIVATE_KEY=sua_firebase_private_key
FIREBASE_CLIENT_EMAIL=seu_firebase_client_email
FIREBASE_CLIENT_ID=seu_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Configurações de Upload
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Configurações de Criptografia
ENCRYPTION_KEY=sua_chave_de_criptografia_32_chars
IV_LENGTH=16
